@model List<Products>
@inject MyDbContext db
@{
	ViewData["Title"] = "Home Page";
}
<style>
	html {
		line-height: 1.6rem;
		font-family: 'Roboto', sans-serif;
		box-sizing: border-box;
	}

	.category {
		background-color: var(--white-color);
		border-radius: 2px;
		padding-bottom: 10px;
		margin-top: 16px;
	}

	.category-heading {
		font-size: 1.7rem;
		color: var(--text-color);
		padding: 12px 16px;
		border-bottom: 1px solid rgba(0, 0, 0, 0.05);
	}

	.category-heading-icon {
		font-size: 1.4rem;
		margin-right: 4px;
		position: relative;
		top: -1px;
	}

	.category-list {
		list-style: none;
		margin-left: 9px;
	}

	.category-item {
	}

	.category-item--active .category-link {
		color: #ee4d2d;
	}

		.category-item--active .category-link::before {
			content: '';
			display: block;
			position: absolute;
			top: 50%;
			left: 8px;
			transform: translateY(-50%);
			border-width: 5px;
			border-style: solid;
			border-color: transparent transparent transparent #ee4d2d;
			/* background-color: #333; */
		}

	.category-link {
		text-decoration: none;
		color: #ee4d2d;
		font-size: 1.4rem;
		font-weight: 500;
		padding: 6px 16px;
		display: block;
		position: relative;
		right: 0;
		transition: right linear 0.1s;
	}

		.category-link:hover {
			color: #ee4d2d;
			right: -4px;
		}


	img {
		width: 240px;
		padding-bottom: 32px;
	}

	p {
		width: 280px;
		margin: 0;
	}

	.col {
		display: flex;
		justify-content: space-between;
		font-family: 'Times New Roman', Times, serif;
	}

	span {
		color: #8c7a7a;
		font-weight: 600;
	}

	.st {
		display: flex;
		justify-content: start;
		align-items: center;
		padding-bottom: 10px;
	}

	.price {
		color: #898888;
		text-decoration: line-through;
		padding-left: 10px;
	}

	b {
		font-size: 20px;
	}

	.p {
		color: #585757;
	}

	.category {
		background-color: #e7dddd5e;
	}

	.col {
		margin-left: 20px;
	}

	.app__content {
		display: flex;
		justify-content: space-between;
	}

	.container {
		margin: 0;
	}

	.fa-list:before {
		font-size: 17px;
	}

	a {
		text-decoration: none;
		color: unset;
	}

	.row a:hover {
		box-shadow: 0 1px 15px 0 rgba(117, 117, 117, 0.5);
		transform: translateY(-4px);
		border: 1px solid rgb(255, 0, 0);
		transition: all 0.4s;
	}

	.item-wrap {
		display: inline-block;
		text-decoration: none;
		margin-bottom: 10px;
	}

	.item {
		margin-left: 10px;
		padding: 9px;
	}

		.item > h3 {
			color: var(--text-color);
			font-size: 22px;
			line-height: 1.4;
		}

		.item > img {
			width: 100%;
		}
</style>
<div class="container">
	<div style="padding-left: 90px" id="carouselExample" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="./imgs/2mb-ip12pro.png" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="./imgs/3919835_NEWS_112952.jpg" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="./imgs/banner-iphone-12-8983a0b6-defe-415e-bb29-2b31927c45f4.webp" class="d-block w-100" alt="...">
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () {
			$('.carousel').carousel({
				interval: 3000
			});
		});
	</script>
	<div class="grid">
		<div class="grid__row app__content">
			<div class=" col-3 ">
				<nav class="category">
					<h3 style="font-size: 22px;" class="category-heading">
						<i class="fas fa-list category-heading-icon"></i>
						Danh Mục
					</h3>
					<ul class="category-list">
						
						@foreach (var category in db.Categories)
						{
							<li class="category-item category-item--active">
								<a href="@Url.Action("Index", "Home", new { categoryId = category.IdDanhMuc })" style="font-size: 19px;" class="category-link">@category.TenDanhMuc</a>
							</li>
						}
					</ul>

				</nav>
			</div>
			<div class="col-10">
				<div class="row mx-3">
					@foreach (var item in Model)
					{
						<div class="col-4">
							<a href="@Url.Action("Watch", "Products", new { maSp = item.MaSP })"
							   style="border-radius: 8px"
							   class="item-wrap border m-3">
								<div class="item">
									<img src="./imgs/img1.jpeg" alt="@item" />
									<h4 style="height: 62px" class="overflow-hidden">
										@item.TenSP
									</h4>
									<p class="brand pt-1">
										<span style="font-size: larger">Hãng</span><span>Đã bán 32</span>
									</p>
									<p class="code-item">IMEI: @item.IMEI</p>
									<div class="d-flex justify-content-between"
										 style="margin-right: 12px">
										<p style="color: red; font-size: 20px">
											Giá :<span>@Convert.ToDouble(@item.DonGia).ToString("N0") </span>đ
										</p>
									</div>
								</div>
							</a>
						</div>
					}
				</div>

				
			</div>
			
		</div>

	</div>
</div>"




