@model List<Cart_detail>



<h1>Giỏ hàng </h1>
<div class="row">
	<table class="table table-striped table-bordered">
		<thead class="font-weight-bold">
			<tr>
				<td class="b">Option</td>
				<td>Id</td>
				<td>Name</td>
				<td>Price</td>
				<td>Quantity</td>
				<td>Total</td>
			</tr>
		</thead>
		<tbody>

			@foreach (var item in Model)
			{

				<tr>
					<td>
					<td>
						<a asp-controller="Cart_details" asp-action="Delete" asp-route-idProduct="@item.Products.MaSP"><button type="button" class="btn btn-danger"> Xóa</button></a>
						<a asp-controller="Cart_details" asp-action="Edit" asp-route-idProduct="@item.Products.MaSP"><button type="button" class="btn btn-warning"> Sửa</button></a>
					</td>
					</td>
					<td>
						@item.MaSP
					</td>
					<td>@item.Products.TenSP</td>
					<td>@Convert.ToDouble(item.Products.DonGia).ToString("N0")</td>
					<td>@item.SoLuong</td>
					<td>@Convert.ToDouble(item.Products.DonGia * item.SoLuong).ToString("N0")</td>
				</tr>

			}




		</tbody>
		<tfoot class="font-weight-bold">
			<tr>
				<td colspan="5" style=" text-align: right;">Sum</td>

				<td>@Convert.ToDouble(@ViewBag.total).ToString("N0")</td>
			</tr>
		</tfoot>
	</table>
</div>
<div class="row">
	<a asp-controller="Home" asp-action="Index">Continue Shopping</a>
</div>

